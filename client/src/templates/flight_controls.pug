style.
    #flight_controls {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
        display: flex;
        justify-content: center;
        align-items: flex-end;
    }
    .control {
        margin-bottom: -11vw;
        max-width: 10vw;
        transition: margin 700ms;
    }

    .control.active {
        margin-bottom: 1vw;
    }

    svg * {
        transform-origin: 50% 50% 0;
    }
#flight_controls
    .control
        include ../assets/flight_controls/Airspeed.svg
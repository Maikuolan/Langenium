/*
	Import dependencies
*/

@import "fluidity"

/*
	Shared stuff that will end up in mixins
*/

// Defaults
defaults()
	font-size 85%
	overflow-y auto
	h1 
		margin 0
		float left

@import "../../shared/styles/forms.styl"
@import "../../shared/styles/menu_layouts.styl"
@import "../../shared/styles/menu_styles.styl"
@import "../../shared/styles/panels.styl"


/*
	Page styles
*/

body
	defaults()

#bg 
	width 100%
	height 100%
	position fixed
	left 0px
	top 0px
	z-index -1 /* Ensure div tag stays behind content -999 might work, too. */

.stretch 
	width 100%
	height 100%


// Layouts
#wrapper 
	grid(80%, 1280px)

#page_header 
	grid-space(100%)
	margin-bottom 7.5px

	.login
		horiz_nav()
		float right
		color #999999
		margin-right 0
		border-style solid
		border-width 28px
		border-image url("/shared/images/border-02.png") 42 41 42 42 fill round
		box-sizing border-box
		li
			margin -10px auto
		input[type='text']
			textbox()
			float right
		input[type='checkbox'], label[for='chk_remember']
			float left
		input[type='checkbox']
			margin-left 15px
			clear left
		label[for='chk_remember']
			clear right
		a
			button()

#page_section #page_nav 
	grid-space(20%)
	ul.vert_nav
		vert_nav()
		main_menu()
		width 85%
		overflow visible
		li 
			margin 0 0 0 -15px
			width 100%
		li a			
			button()
			width 100%
			font-weight bold
			text-transform uppercase
			text-align center



#page_section #page_content 
	grid-space(40%)
	header
		featured_content_panel()
	section
		featured_content_scroller_panel()
		ul.horiz_nav
			horiz_nav()
	footer
		ul.thumb_nav
			thumb_nav()


#page_section #page_sidebar 
	grid-space(40%)
	article
		feed_content_panel()
		img
			float left
 
/*
	Layout Responsiveness
*/

@media screen and (max-width: 1280px)
	#wrapper {
		grid(90%,840px)
	}
	#page_section #page_nav {
		grid-space(35%)
	}
	#page_section #page_content {
		grid-space(60%)
	}
	#page_section #page_sidebar {
		grid-space(97%)
	}
	#page_section #page_sidebar .thumb {
		width: 20%;
	}
	#page_header .login {
		margin-right: 42px;
	}


@media screen and (max-width: 800px)
	#wrapper {
		grid(95%,320px)
	}
	#page_section #page_nav {
		grid-space(100%)
	}
	#page_section #page_content {
		grid-space(100%)
	}
	#page_section #page_sidebar {
		grid-space(100%)
	}
	#page_section #page_sidebar .thumb {
		width: 40%;
	}
	#page_header .login {
		margin-right: 48px;
	}
	#page_header .login li {
		margin: -10px auto 10px auto;
	}

@import 'node_modules/jeet/jeet'
// Defaults

bp_tablet = 'screen and (min-width: 768px)'
bp_desktop = 'screen and (min-width: 1200px)'

@font-face
  font-family 'Franchise'
  font-style normal
  font-weight normal
  src url('/dist/font/francise.eot')
  src url('/dist/font/franchise.eot?#iefix') format('embedded-opentype'),
     url('/dist/font/franchise.woff') format('woff'),
     url('/dist/font/franchise.ttf') format('truetype'),
     url('/dist/font/franchise.svg#franchiseregular') format('svg');
h1 
  margin 0
  float left
h1, h2, h3, h4, h5, h6
  letter-spacing .05em

h1, h2, h3, h4, h5, h6
  font-family 'Franchise'

// Mixins
reset-list()
  ul
    padding 0
  li
    display inline-block
    list-style-type none
    padding 1em 1em 0
    vertical-align top

stretch-image()
  max-width 100%
  max-height 100%

// Helpers
.row
  clearfix()
  center(1200px)
  header&
    max-width none
    
// Globals
html, body 
  font-family sans-serif
  background-color #000
  color #FFF

a
  color #1AF
  text-decoration none
  &:hover
    text-decoration underline

// Layout
  
header
  .logo
    column(1)
    img
      stretch-image()
      

  nav
    column(1/2)
    reset-list()
    ul
      float right
    li
      display inline-block
      a
        color #888
        font-family 'Franchise'
        font-size 2em
        line-height 3em
        padding .5em 1em
        text-decoration none
        &:hover
          color #FFF
          text-decoration none

  .fb-like
    column(1/2)

.hero
  canvas
    width 100% !important
    height 100% !important

.hero,
.call_to_action,
.news,
.most_popular
  column(1)

.call_to_action
  reset-list()
  li
    column(1/4)   
    text-align center

.most_popular
  reset-list()

.gallery
  reset-list()

// Tablet
@media bp_tablet
  .news
    column(3/5)

  .most_popular
    column(2/5)

// Desktop
@media bp_desktop
  header
    .logo
      column(4/12)
    nav
      column(7/12)
    .fb-like
      column(1/12)
 
  .hero,
  .news
    column(5/7)

  .call_to_action,
  .most_popular
    column(2/7)

  .call_to_action
    li
      column(1/2)
      margin 0
      text-align center
